
NEW SQL CODE:

OLD (getArticlesFromCluster): SELECT title, url, date_published, source, id FROM articles WHERE " +
             "temp_cluster_id = ?


NEW: SELECT title, url, date_published, source, id FROM articles a
JOIN article_cluster c ON c.article_id = a.id
WHERE c.cluster_id = ?


OLD (getArticleVerticesFromCluster): SELECT id, source, title, url, date_published, text FROM
articles WHERE temp_cluster_id=?



NEW: SELECT id, source, title, url, date_published, text FROM articles a
JOIN article_cluster c ON c.article_id = a.id
WHERE c.cluster_id = ?



















------------------------------


get articles

SELECT id, title, url, date_published, text
FROM articles
WHERE date_pulled >= date('now', '-? hours') AND date_pulled < date('now');


get vocab freq

SELECT *
FROM vocab


get entity freq

SELECT *
FROM entity


get max count

SELECT count
FROM vocab
ORDER BY count DESC
LIMIT 1;


get article entity

SELECT entity_class, entity_entity, count
FROM article_entity
WHERE article_id = ?;


SELECT id
FROM clusters
WHERE head = ?;


UPDATE articles
SET final_cluster_id = ?
WHERE id = ?;